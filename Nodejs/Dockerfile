#  Image 住住 注 Node.js
FROM node:18

# О 转拽转 LibreOffice
RUN apt-get update && \
    apt-get install -y libreoffice && \
    apt-get clean;

#  转拽转 注 驻拽爪
WORKDIR /app

#  转拽转 转转
COPY package*.json ./
RUN npm install

#  注转拽转 砖专 拽爪
COPY . .

#  驻转转 驻专
EXPOSE 3001

# 讹 驻注转 驻拽爪
CMD [ "node", "server.js" ]
